{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2021", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2020",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}
